{
    "env": {
        "browser": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": "airbnb",
    "rules": {
        "linebreak-style": ["error", "windows"],
        "import/prefer-default-export": "off",
        "trailing-comma": "off",
        "eol-last": 1,
        "no-unused-vars": 1,
        "prefer-const": 1,
        "class-methods-use-this": 0,
        "no-plusplus": 0,
        "no-trailing-spaces": 1,
        "no-alert": "off"
    }
}